class Plane:
    def __init__(self,number):
        self.number=number
        self.is_safe=False
class Commando:
    def __init__(self):
        self.resting=True
    def fight_terrorist(self,plane):
        print(f"commando is fighting terrorist on plane {plane.number}")
        plane.is_safe=True
        self.resting=False
    def rest(self):
        print("commando is resting")
        self.resting=True
def main():
    planes =[Plane(i) for i in range(1,8)]
    commando=Commando()
    for plane in planes:
        if not plane.is_safe:
            commando.fight_terrorist(plane)
        if not commando.resting:
            commando.rest()
main()
